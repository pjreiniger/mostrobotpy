#     name = "cscore",
#     library = "@bzlmodrio-allwpilib//libraries/cpp/cscore:shared_raw",
#     base_path = "native/cscore",
# )

copy_extension_library(
    name = "copy_cscore",
    extension = "_cscore",
    output_directory = "cscore/",
)

robotpy_library(
    name = "cscore",
    package_name = "robotpy-cscore",
    srcs = glob(["cscore/**/*.py"]) + ["cscore/_init__cscore.py"],
    data = [
        ":copy_cscore",
        # ":cscore.copy_lib",
    ],
    imports = ["."],
    robotpy_wheel_deps = [
        "//subprojects/pyntcore:import",
        "//subprojects/robotpy-wpiutil:import",
    ],
    strip_path_prefixes = ["subprojects/robotpy-cscore"],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "generated_files",
    srcs = [
        "cscore.generated_files",
    ],
    visibility = ["//visibility:public"],
)
