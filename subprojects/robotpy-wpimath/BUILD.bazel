load("@aspect_bazel_lib//lib:write_source_files.bzl", "write_source_files")
load("@rules_python//python:defs.bzl", "py_library")
load("//rules_robotpy_utils:generate_robotpy_source_files.bzl", "generate_robotpy_source_files")
load("//rules_robotpy_utils:generation_variables.bzl", "DEFAULT_DISABLE_GEN")
load("//rules_robotpy_utils:pybind_rules.bzl", "generated_files_helper", "pybind_python_library")

filegroup(
    name = "config_file",
    srcs = ["pyproject.toml"],
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generated_files_helper(
    name = "wpimath",
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generated_files_helper(
    name = "wpimath_controls",
    rpy_include_dir = "generated/rpy-include/wpimath/_controls/rpy-include",
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generated_files_helper(
    name = "wpimath_filter",
    rpy_include_dir = "generated/rpy-include/wpimath/filter/rpy-include",
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generated_files_helper(
    name = "wpimath_geometry",
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generated_files_helper(
    name = "wpimath_interpolation",
    rpy_include_dir = "generated/rpy-include/wpimath/interpolation/rpy-include",
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generated_files_helper(
    name = "wpimath_kinematics",
    rpy_include_dir = "generated/rpy-include/wpimath/kinematics/rpy-include",
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generated_files_helper(
    name = "wpimath_spline",
    rpy_include_dir = "generated/rpy-include/wpimath/spline/rpy-include",
    visibility = ["//subprojects/robotpy-wpimath:__subpackages__"],
)

generate_robotpy_source_files(
    name = "wpimath",
    config_file = ":config_file",
    headers = ["@bazelrio_edu_wpi_first_xx-cpp_linuxx86-64//:shared_libs"],
    internal_project_dependencies = ["wpiutil"],
    projects = [
        "wpimath",
        "_impl",
        "_controls",
        "filter",
        "geometry",
        "kinematics",
        "interpolation",
        "spline",
    ],
    python_deps = [
        "//subprojects/robotpy-wpiutil:pkgcfg",
    ],
)

pybind_python_library(
    name = "wpimath",
    srcs = [
        "//subprojects/robotpy-wpimath/wpimath:python_files",
        "//subprojects/robotpy-wpimath/wpimath/_controls:python_files",
        "//subprojects/robotpy-wpimath/wpimath/_impl:python_files",
        "//subprojects/robotpy-wpimath/wpimath/controller:python_files",
        "//subprojects/robotpy-wpimath/wpimath/estimator:python_files",
        "//subprojects/robotpy-wpimath/wpimath/filter:python_files",
        "//subprojects/robotpy-wpimath/wpimath/geometry:python_files",
        "//subprojects/robotpy-wpimath/wpimath/interpolation:python_files",
        "//subprojects/robotpy-wpimath/wpimath/kinematics:python_files",
        "//subprojects/robotpy-wpimath/wpimath/optimization:python_files",
        "//subprojects/robotpy-wpimath/wpimath/path:python_files",
        "//subprojects/robotpy-wpimath/wpimath/spline:python_files",
        "//subprojects/robotpy-wpimath/wpimath/system:python_files",
        "//subprojects/robotpy-wpimath/wpimath/trajectory:python_files",
    ],
    data = [
        "//subprojects/robotpy-wpimath/wpimath:wpimath.pyso",
        "//subprojects/robotpy-wpimath/wpimath/_controls:controls.pyso",
        "//subprojects/robotpy-wpimath/wpimath/_impl:copy_lib",
        "//subprojects/robotpy-wpimath/wpimath/filter:filter.pyso",
        "//subprojects/robotpy-wpimath/wpimath/geometry:geometry.pyso",
        "//subprojects/robotpy-wpimath/wpimath/interpolation:interpolation.pyso",
        "//subprojects/robotpy-wpimath/wpimath/kinematics:kinematics.pyso",
        "//subprojects/robotpy-wpimath/wpimath/spline:spline.pyso",
        "@bazelrio_edu_wpi_first_wpimath_wpimath-cpp_linuxx86-64//:shared",
    ],
    imports = ["."],
    visibility = ["//visibility:public"],
    deps = [
        "//subprojects/robotpy-wpiutil:wpiutil",
    ],
)

py_library(
    name = "pkgcfg",
    srcs = [
        "//subprojects/robotpy-wpimath/wpimath:pkgcfg",
        "//subprojects/robotpy-wpimath/wpimath/_controls:pkgcfg",
        "//subprojects/robotpy-wpimath/wpimath/_impl:pkgcfg",
        "//subprojects/robotpy-wpimath/wpimath/filter:pkgcfg",
        "//subprojects/robotpy-wpimath/wpimath/geometry:pkgcfg",
        "//subprojects/robotpy-wpimath/wpimath/interpolation:pkgcfg",
        "//subprojects/robotpy-wpimath/wpimath/kinematics:pkgcfg",
        "//subprojects/robotpy-wpimath/wpimath/spline:pkgcfg",
    ],
    imports = ["."],
    visibility = ["//visibility:public"],
    deps = [
        "//subprojects/robotpy-wpiutil:pkgcfg",
    ],
)

write_source_files(
    name = "write_on_build_dl_files",
    additional_update_targets = [
        "//subprojects/robotpy-wpimath/wpimath:write_on_build_dl_files",
        "//subprojects/robotpy-wpimath/wpimath/_controls:write_on_build_dl_files",
        "//subprojects/robotpy-wpimath/wpimath/_impl:write_on_build_dl_files",
        "//subprojects/robotpy-wpimath/wpimath/filter:write_on_build_dl_files",
        "//subprojects/robotpy-wpimath/wpimath/geometry:write_on_build_dl_files",
        "//subprojects/robotpy-wpimath/wpimath/interpolation:write_on_build_dl_files",
        "//subprojects/robotpy-wpimath/wpimath/kinematics:write_on_build_dl_files",
        "//subprojects/robotpy-wpimath/wpimath/spline:write_on_build_dl_files",
    ] if not DEFAULT_DISABLE_GEN else [],
    suggested_update_target = "//:write_on_build_dl_files",
    visibility = ["//visibility:public"],
)
