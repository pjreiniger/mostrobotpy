wpilib_event_extension(
    entry_point = ["wpilib/event/event.cpp"],
    extension_name = "_event",
    deps = [
        "//subprojects/robotpy-native-wpilib:wpilib",
        "//subprojects/robotpy-wpimath:wpimath_filter_pybind_library",
    ],
)

wpilib_interfaces_extension(
    entry_point = ["wpilib/interfaces/interfaces.cpp"],
    extension_name = "_interfaces",
    deps = [
        "//subprojects/robotpy-native-wpilib:wpilib",
        "//subprojects/robotpy-wpilib:wpilib_event_pybind_library",
        "//subprojects/robotpy-wpimath:wpimath_filter_pybind_library",
        "//subprojects/robotpy-wpimath:wpimath_geometry_pybind_library",
    ],
)

wpilib_extension(
    entry_point = ["wpilib/src/main.cpp"],
    extra_hdrs = glob([
        "wpilib/src/rpy/*.h",
        "wpilib/src/rpy/*.inc",
    ]),
    extra_srcs = glob(
        ["wpilib/src/**/*.cpp"],
        exclude = ["wpilib/src/main.cpp"],
    ),
    includes = [
        "wpilib",
        "wpilib/src",
    ],
    deps = [
        "//subprojects/pyntcore:ntcore_pybind_library",
        "//subprojects/robotpy-hal:wpihal_pybind_library",
        "//subprojects/robotpy-native-wpilib:wpilib",
        "//subprojects/robotpy-wpilib:wpilib_event_pybind_library",
        "//subprojects/robotpy-wpilib:wpilib_interfaces_pybind_library",
