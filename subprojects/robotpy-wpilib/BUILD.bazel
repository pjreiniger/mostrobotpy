        "//subprojects/robotpy-wpilib:wpilib_interfaces_pybind_library",
        "//subprojects/robotpy-wpilib:wpilib_pybind_library",
        "//subprojects/robotpy-wpimath:wpimath_controls_pybind_library",
        "//subprojects/robotpy-wpimath:wpimath_filter_pybind_library",
        "//subprojects/robotpy-wpimath:wpimath_geometry_pybind_library",
        "//subprojects/robotpy-wpimath:wpimath_pybind_library",
        "//subprojects/robotpy-wpiutil:wpiutil_pybind_library",
